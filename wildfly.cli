# ./jboss-cli.sh --connect --file=/sciezka/do/pliku/wildfly.cli

# Połączenie z bazą danych
if (outcome != success) of /subsystem=datasources/data-source=elfs:read-resource
    data-source add \
         --name=elfs \
         --driver-name=h2 \
         --driver-class=org.h2.Driver \
         --connection-url=jdbc:h2:mem:elfs;DB_CLOSE_DELAY=-1 \
         --jndi-name=java:/elfs \
         --user-name=sa \
         --password=sa \

    data-source enable --name=elfs
end-if


#n Załadowanie nowej konfiguracji w uruchomionym serwerze
:reload
